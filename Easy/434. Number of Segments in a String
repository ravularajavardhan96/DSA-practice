class Solution {
    public int countSegments(String s) {
        if(s.length()==0){
            return 0;
        }
        String[] arr = s.split(" ");
        ArrayList<String> arrList = new ArrayList<>();
        for(int i=0;arr.length>i;i++){
            if(!arr[i].equals("")){
                System.out.println(arr[i]);
                arrList.add(arr[i]);
            }
        }
        System.out.println(arrList);
        return arrList.size();
        
    }
}
